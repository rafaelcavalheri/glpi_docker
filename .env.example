# Configurações do Banco de Dados MariaDB
# Altere estas senhas por valores seguros antes de usar em produção
MYSQL_ROOT_PASSWORD=sua_senha_root_aqui
MYSQL_DATABASE=glpi
MYSQL_USER=glpi
MYSQL_PASSWORD=sua_senha_glpi_aqui

# Configurações do GLPI
# Defina o fuso horário apropriado para sua região
TIMEZONE=America/Sao_Paulo

# Configurações de Rede
# Porta onde o GLPI será acessível
GLPI_PORT=9020

# Configurações de Upgrade
# Habilita upgrade automático inteligente do GLPI
AUTO_UPGRADE=false